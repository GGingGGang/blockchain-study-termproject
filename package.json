{
  "name": "blockchain-game-assets",
  "version": "1.0.0",
  "description": "Blockchain-based game asset system with NFT marketplace",
  "main": "index.js",
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "node": "hardhat node",
    "server": "node server/index.js",
    "server:dev": "nodemon server/index.js",
    "test:ipfs": "node test-ipfs.js",
    "test:blockchain": "node test-blockchain.js",
    "test:api": "node test-api.js",
    "start": "node server/index.js",
    "dev": "nodemon server/index.js",
    "lint": "eslint server/**/*.js || echo 'ESLint not configured'",
    "deploy": "bash deploy.sh production",
    "docker:build": "docker build -t blockchain-bridge .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f bridge-server",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop blockchain-bridge",
    "pm2:restart": "pm2 restart blockchain-bridge",
    "pm2:logs": "pm2 logs blockchain-bridge"
  },
  "keywords": [
    "blockchain",
    "nft",
    "game",
    "ethereum",
    "hardhat"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "hardhat": "^2.19.0"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^5.0.0",
    "axios": "^1.13.2",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "ethers": "^6.15.0",
    "express": "^5.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.1",
    "mysql2": "^3.15.3",
    "node-cron": "^4.2.1",
    "pinata-web3": "^0.5.4",
    "web3": "^4.16.0"
  }
}
