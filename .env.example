# Sepolia 테스트넷 RPC URL
# Infura, Alchemy, 또는 공개 RPC 사용
SEPOLIA_RPC_URL=https://rpc.sepolia.org

# 배포자 계정 개인키 (0x 접두사 제외)
# 주의: 테스트넷 전용 지갑 사용, 실제 자산이 있는 지갑 사용 금지
PRIVATE_KEY=your_private_key_here

# Etherscan API 키 (컨트랙트 검증용, 선택사항)
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# 배포된 컨트랙트 주소 (Sepolia 테스트넷)
MINIMAL_FORWARDER_ADDRESS=your_minimal_forwarder_address
GAME_TOKEN_ADDRESS=your_game_token_contract_address
GAME_ASSET_NFT_ADDRESS=your_nft_contract_address

# 컨트랙트 배포 블록 (NFT 스캔 시작점)
CONTRACT_DEPLOY_BLOCK=9619320

# 서버 지갑 주소 (상점 판매 수익 수령용)
SERVER_WALLET_ADDRESS=your_server_wallet_address

# 브릿지 서버 설정
PORT=3000
NODE_ENV=development
CORS_ORIGIN=*

# 데이터베이스 설정
DB_HOST=db
DB_PORT=3306
DB_NAME=blockchain_game
DB_USER=bridge_user
DB_PASSWORD=your_database_password

# IPFS / Pinata 설정
PINATA_JWT=your_pinata_jwt_token_here
PINATA_GATEWAY=https://gateway.pinata.cloud

# JWT 인증
JWT_SECRET=your_jwt_secret_key_here

# 도메인 설정
DOMAIN=bridge:3000

# 테스트용 지갑 주소 (test-ownership.js 등에서 사용)
TEST_WALLET_ADDRESS=your_test_wallet_address
